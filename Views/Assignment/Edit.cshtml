@model StudyTracker.Models.Assignment

<h2>Edit Assignment for course: @ViewBag.CourseName</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CourseId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Название задания</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label">Статус</label>
        <select asp-for="Status" class="form-select">
            <option>Не начато</option>
            <option>В процессе</option>
            <option>Завершено</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Deadline" class="form-label">Дедлайн</label>
        <input asp-for="Deadline" type="date" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary ms-2">Назад к заданиям</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
